{
  "name": "happy-balance-workspace",
  "version": "1.0.0",
  "description": "Happy Balance - Personal finance management workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev-local.js",
    "dev:docker": "node scripts/dev.js",
    "setup": "node scripts/dev.js setup",
    "db:start": "node scripts/db-manager.js start",
    "db:stop": "node scripts/db-manager.js stop",
    "db:reset": "node scripts/db-manager.js reset",
    "db:setup": "cd apps/backend && pnpm db:generate && pnpm db:push",
    "db:migrate": "cd apps/backend && pnpm db:migrate",
    "db:seed": "cd apps/backend && pnpm db:seed",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "cd apps/frontend && pnpm build",
    "build:backend": "cd apps/backend && pnpm build",
    "start": "pnpm run start:frontend",
    "start:frontend": "cd apps/frontend && pnpm preview",
    "start:backend": "cd apps/backend && pnpm start",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "cd apps/frontend && pnpm test",
    "test:backend": "cd apps/backend && pnpm test",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "cd apps/frontend && pnpm lint",
    "lint:backend": "cd apps/backend && pnpm lint",
    "lint:fix": "pnpm run lint:fix:frontend && pnpm run lint:fix:backend",
    "lint:fix:frontend": "cd apps/frontend && pnpm lint:fix",
    "lint:fix:backend": "cd apps/backend && pnpm lint:fix",
    "typecheck": "pnpm run typecheck:frontend && pnpm run typecheck:backend",
    "typecheck:frontend": "cd apps/frontend && pnpm typecheck",
    "typecheck:backend": "cd apps/backend && pnpm typecheck",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/dist apps/frontend/build apps/backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "happy-balance",
    "finance",
    "svelte",
    "sveltekit",
    "typescript",
    "ddd",
    "hexagonal-architecture",
    "postgresql"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alcibiadesc/happy-balance.git"
  }
}
