{
	"name": "expense-tracker",
	"version": "1.0.0",
	"description": "Personal finance management application built with SvelteKit, following DDD and Hexagonal Architecture",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev --host 0.0.0.0 --port 5179",
		"dev:local": "vite dev",
		"build": "vite build",
		"preview": "vite preview --host 0.0.0.0 --port 4173",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:unit": "vitest run --reporter=verbose",
		"test:coverage": "vitest run --coverage",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"format": "prettier --write .",
		"db:migrate": "prisma db push",
		"db:studio": "prisma studio --port 5555",
		"db:seed": "node prisma/seed.js",
		"db:reset": "prisma db push --force-reset && npm run db:seed",
		"db:up": "docker compose -f docker-compose.db.yml up -d",
		"db:down": "docker compose -f docker-compose.db.yml down",
		"db:logs": "docker compose -f docker-compose.db.yml logs -f",
		"docker:dev": "docker compose -f docker-compose.hotreload.yml up --build",
		"docker:dev:down": "docker compose -f docker-compose.hotreload.yml down",
		"docker:dev:rebuild": "docker compose -f docker-compose.hotreload.yml up --build --force-recreate",
		"docker:prod": "docker compose up -d --build",
		"docker:prod:down": "docker compose down",
		"docker:prod:logs": "docker compose logs -f",
		"typecheck": "svelte-kit sync && tsc --noEmit",
		"analyze": "npm run build && npx vite-bundle-analyzer dist"
	},
	"dependencies": {
		"@prisma/client": "^5.7.1",
		"@types/uuid": "^9.0.7",
		"chart.js": "^4.4.0",
		"chartjs-adapter-date-fns": "^3.0.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"date-fns": "^2.30.0",
		"lucide-svelte": "^0.294.0",
		"tailwind-merge": "^2.1.0",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^2.0.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.10",
		"@types/node": "^20.10.4",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"prisma": "^5.7.1",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.8",
		"vite-bundle-analyzer": "^0.7.0",
		"vitest": "^1.0.4"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@9.0.0",
	"keywords": [
		"expense-tracker",
		"finance",
		"svelte",
		"sveltekit",
		"typescript",
		"ddd",
		"hexagonal-architecture",
		"docker"
	],
	"author": "Claude Code",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/user/expense-tracker.git"
	}
}