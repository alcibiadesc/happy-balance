{
  "name": "happy-balance-workspace",
  "version": "1.0.0",
  "description": "Happy Balance - Personal finance management workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    ".",
    "backend"
  ],
  "scripts": {
    "dev": "node scripts/dev-env.js",
    "setup:worktree": "node scripts/setup-worktree.js",
    "worktree:list": "node scripts/worktree-manager.js list",
    "worktree:create": "node scripts/worktree-manager.js create",
    "worktree:clean": "node scripts/worktree-manager.js clean",
    "dev:frontend": "vite dev --host 0.0.0.0 --port 5173",
    "dev:backend": "cd backend && pnpm dev",
    "dev:clean": "docker ps -a | grep happy-balance | awk '{print $1}' | xargs -r docker stop && docker ps -a | grep happy-balance | awk '{print $1}' | xargs -r docker rm",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "cd backend && pnpm build",
    "start": "npm run start:frontend",
    "start:frontend": "vite preview",
    "start:backend": "cd backend && pnpm start",
    "db:setup": "cd backend && pnpm db:generate && pnpm db:push",
    "db:migrate": "cd backend && pnpm db:migrate",
    "db:reset": "cd backend && pnpm db:reset",
    "db:seed": "cd backend && pnpm db:seed",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up --build -d",
    "docker:prod:down": "docker-compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:shell": "docker compose exec app sh",
    "docker:db": "docker compose exec postgres psql -U postgres -d happy_balance",
    "docker:migrate": "docker compose exec app sh -c 'cd backend && pnpm prisma migrate dev'",
    "docker:seed": "docker compose exec app sh -c 'cd backend && pnpm prisma db seed'",
    "docker:reset": "docker compose exec app sh -c 'cd backend && pnpm prisma migrate reset'",
    "docker:clean": "docker compose down -v --remove-orphans && docker system prune -f",
    "install:all": "pnpm install && cd backend && pnpm install",
    "clean": "rm -rf node_modules dist build && cd backend && rm -rf node_modules dist",
    "test": "vitest",
    "test:backend": "cd backend && pnpm test",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix && cd backend && pnpm lint:fix",
    "typecheck": "svelte-kit sync && tsc --noEmit && cd backend && pnpm typecheck"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "lucide-svelte": "^0.542.0",
    "svelte-i18n": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.39.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "daisyui": "^5.1.10",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^3.12.3",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "svelte": "^5.38.10",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^6.3.6",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "keywords": [
    "expense-tracker",
    "finance",
    "svelte",
    "sveltekit",
    "typescript",
    "ddd",
    "hexagonal-architecture",
    "postgresql"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/expense-tracker.git"
  }
}